.table
  width 100%
  border-radius border-radius-normal
  border 1px solid border-grey
  border-collapse separate
  th
    padding 1rem
    background-color background-lighter-grey
    font-weight 600
    border-bottom 1px solid border-grey
  tr
    background-color #fff
    td
      padding 0.8rem 1rem
      border-bottom 1px solid border-grey
      line-height 1.375rem
      i
        margin-right .4rem
        opacity .6
    &:last-child
      td
        border-bottom 0
  &.striped
    tr:nth-child(2n)
      background-color background-lightest-grey
  &.simple
    th
      background-color transparent
  &.basic
    border 0
    th, tr
      background-color transparent
  &.cells
    th
      border-left 1px solid border-grey
      &:first-child
        border-left 0
    tr
      td
        border-left 1px solid border-grey
        &:first-child
          border-left 0
